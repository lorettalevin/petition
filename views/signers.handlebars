<div class="signers-container">

    {{#each signers}}
        <div class="each-signer">
            {{#if this.url}}
                <p><a href="{{url}}">{{this.first}} {{this.last}}</a>  ({{#if this.age}}{{this.age}}, {{/if}}{{#if hideCity}}){{else}}<a href="/petition/signers/{{city}}">{{city}}</a>){{/if}}</p>
            {{else}}
                <p>{{this.first}} {{this.last}}  ({{#if this.age}}{{this.age}}, {{/if}}{{#if hideCity}}){{else}}<a href="/petition/signers/{{city}}">{{city}}</a>){{/if}}</p>
            {{/if}}


        </div>
    {{/each}}

    <div class="logout-container">
        <a href="/logout">Click here to logout</a>
    </div>
</div>
